<UserControl x:Class="Practical_work_3_visual_programming.UserControlLogin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Practical_work_3_visual_programming"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="340">
    <UserControl.Resources>
        <Style x:Key="btn" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid ClipToBounds="True">
                            <Rectangle x:Name="RectangleBtn"
                                       HorizontalAlignment="Stretch" 
                                       VerticalAlignment="Stretch" 
                                       RadiusX="10"
                                       RadiusY="10"
                                       Fill="LightBlue"/>
                            <DockPanel>
                                <ContentPresenter Content="{TemplateBinding Content}"
                                                  TextBlock.Foreground="Black"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"
                                                  TextBlock.FontSize="15"/>
                            </DockPanel>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="RectangleBtn" Property="Fill" Value="LightGreen"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <StackPanel>
        <TextBlock Name="txtMessageLogin" TextAlignment="Center"></TextBlock>
        <Grid Height="100">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       Margin="5,5">Нікнейм:</TextBlock>
            <TextBox Name="usernameBox" 
                     Grid.Column="1" 
                     Margin="10,10" 
                     Height="20"
                     KeyDown="Button_KeyDown"/>
            <TextBlock HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       Grid.Row="1" 
                       Margin="5,5">Пароль:</TextBlock>
            <PasswordBox Name="passwdBox"
                         Height="20"
                         Grid.Column="1" 
                         Grid.Row="1" 
                         Margin="10,10"
                         KeyDown="Button_KeyDown"/>
        </Grid>
        <Button Style="{StaticResource btn}" 
                Width="100"
                Height="30"
                Click="Button_Click"
                KeyDown="Button_KeyDown">Вхід</Button>
    </StackPanel>
</UserControl>
